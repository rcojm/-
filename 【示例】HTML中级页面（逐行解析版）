            name="name"
            placeholder="请输入您的姓名"
            required
          />
          <!-- <转行 /><转行 /> -->
          <br /><br />

          <!-- <标签 为了=“邮箱”>邮箱：</标签> -->
          <label for="email">邮箱：</label>
          <!-- <输入
           类型=“邮箱”
           名称=“邮箱”
           名字=“邮箱”
