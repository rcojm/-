          <!-- <标签 为了=“信息”>留言：</标签> -->
          <label for="message">留言：</label>

          <!-- <文本区域
           名称=“信息”
           名字=“信息”
           占位符=“请输入您的邮箱”
           行数=“5”
           必填
           /><文本区域> -->
          <textarea
            id="message"
            name="message"
            placeholder="请输入您的留言"
            rows="5"
            required
          ></textarea>
          <!-- <转行 /><转行 /> -->
          <br /><br />

          <!-- <按键 类型=“提交”>提交</按键> -->
